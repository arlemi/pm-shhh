{
  "manifest_version": 3,
  "name": "pm-shhh",
  "description": "An extension for hiding sensitive variables in Postman for web during livestreams",
  "version": "1",
  "author": "Claire Froelich",
  "permissions": ["storage", "activeTab", "declarativeContent"],
  "content_scripts": [
    {
      "matches": ["https://*.postman.co/*", "https://*.postman.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  }
}
